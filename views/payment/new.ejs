<%- include("../partials/header.ejs") %>

<div class="container payment-new">

    <h1>Add new payment</h1>

    <form action="/user/<%= currentUser._id %>/new_payment" method="POST">

        <div class="mb-3">
            <label class="form-label"></label>
            <input type="text" class="form-control" name="payment[card_owner]" placeholder="Name on Card">
        </div>

        <div class="mb-3">
            <label class="form-label"></label>
            <input type="number" class="form-control" name="payment[card_number]" placeholder="Card Number">
        </div>

        <div class="mb-3">
            <label class="form-label"></label>
            <input type="text" class="form-control" name="payment[expired]" placeholder="MM/YY">
        </div>

    <div class="mb-3">
        <label class="form-label"></label>
        <input type="number" class="form-control" name="payment[cvc]" placeholder="Security Code">
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
    <a href="/user/<%= currentUser._id %>/payment" >Go back</a>
    </form>
</div>
  <%- include("../partials/footer.ejs") %>